<div class="container">

  <h1>新規登録画面</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row justify-content-center mt-5">
      <div class="col-3"><%= f.label :メールアドレス %></div>
      <div class="col-5"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="row justify-content-center mt-5">
      <div class="col-3">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </div>
      <div class="col-5"><%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>

    <div class="row justify-content-center mt-5">
      <div class="col-3"><%= f.label :パスワード確認用 %></div>
      <div class="col-5"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>

    <div class="row justify-content-center mt-5">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <div class="row justify-content-center mt-5">
    <h6>ログインの方は</h6><h6><%= link_to 'こちら', new_user_session_path %></h6>
  </div>

</div>
